<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_empty_screen_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintVertical_bias="0"
            android:src="@drawable/ic_empty_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@+id/iv_empty_screen_view"
            android:layout_width="wrap_content"
            android:text="@string/oops_message"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="64dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_empty_title"/>

    <TextView
            android:id="@+id/tv_empty_description"
            android:layout_width="wrap_content"
            android:text="@string/no_saved_account_data_message"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/secondaryText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_empty_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>