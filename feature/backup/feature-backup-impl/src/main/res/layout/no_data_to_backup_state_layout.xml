<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvNoDataToBackupInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/no_data_to_backup_info_text"
            android:textAlignment="center"
            android:textColor="?themedSecondaryTextColor"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddNewPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    <Button
            android:id="@+id/btnAddNewPassword"
            style="@style/PSButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="?themedPrimaryLightColor"
            android:minWidth="160dp"
            android:text="@string/no_data_to_backup_add_password"
            android:textColor="?staticColorWhite"
            app:layout_constraintBottom_toTopOf="@+id/btnAddNewAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNoDataToBackupInfoText" />

    <Button
            android:id="@+id/btnAddNewAccount"
            style="@style/PSButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="?themedPrimaryLightColor"
            android:minWidth="160dp"
            android:text="@string/no_data_to_backup_add_account"
            android:textColor="?staticColorWhite"
            app:layout_constraintBottom_toTopOf="@+id/btnNoDataToBackupImportFile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddNewPassword" />

    <Button
            android:id="@+id/btnNoDataToBackupImportFile"
            style="@style/PSButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="?themedPrimaryLightColor"
            android:minWidth="160dp"
            android:text="@string/user_has_backup_file_text"
            android:textColor="?staticColorWhite"
            app:layout_constraintBottom_toTopOf="@+id/btnNoDataToBackupImportWithGAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddNewAccount" />

    <Button
            android:id="@+id/btnNoDataToBackupImportWithGAccount"
            style="@style/PSButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="?themedPrimaryLightColor"
            android:minWidth="160dp"
            android:text="@string/user_has_backup_g_account_text"
            android:textColor="?staticColorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNoDataToBackupImportFile" />

</androidx.constraintlayout.widget.ConstraintLayout>