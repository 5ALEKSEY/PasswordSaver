<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccentBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_rectangle_accent</item>
    </style>

    <style name="WhiteBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_rectangle_white</item>
    </style>

    <style name="PhotoChooserBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AccentBottomSheet</item>
    </style>

    <style name="PasswordActionsBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/WhiteBottomSheet</item>
    </style>

    <style name="PSButtonStyle">
        <item name="android:textColor">@color/staticColorWhite</item>
        <item name="android:background">@drawable/bg_rounded_radius_rectangle</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>