<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@drawable/bg_top_rounded_rectangle_white"
        tools:backgroundTint="@color/colorPrimary">

    <View
            android:layout_width="35dp"
            android:layout_height="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_rounded_radius_rectangle"
            android:backgroundTint="@color/colorBlack"
            app:layout_constraintBottom_toTopOf="@+id/tvCopyPasswordContentAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/tvCopyPasswordContentAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="@string/chooser_copy_password_content"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCopyPasswordContentAction" />

    <TextView
            android:id="@+id/tvEditPasswordItemAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/chooser_edit_password_content"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCopyPasswordContentAction" />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEditPasswordItemAction" />

    <TextView
            android:id="@+id/tvDeletePasswordItemAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="@string/chooser_delete_password_content"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEditPasswordItemAction" />

</androidx.constraintlayout.widget.ConstraintLayout>