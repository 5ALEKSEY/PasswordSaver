<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:textSize="18sp"
            android:textColor="@color/primaryText"
            tools:text="Setting name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:id="@+id/tv_setting_name"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/s_setting_enabling_state"/>

    <TextView
            android:textSize="16sp"
            android:textColor="@color/secondaryText"
            tools:text="Description ede ded ed ededededde dedededde dedededededede ededededdededd deddededede dedededed"
            android:layout_marginStart="12dp"
            app:layout_constraintHorizontal_bias="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_setting_name"
            android:id="@+id/tv_setting_description"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/s_setting_enabling_state"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_setting_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_setting_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/s_setting_enabling_state"/>

</android.support.constraint.ConstraintLayout>