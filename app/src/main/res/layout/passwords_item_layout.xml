<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_password_name"
                android:text="Text"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textColor="@color/primaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/iv_password_avatar"/>

        <ImageView
                android:id="@+id/iv_password_avatar"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toTopOf="@+id/tv_password_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
                android:id="@+id/tv_password_content"
                android:layout_width="match_parent"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_password_show_action"
                android:gravity="center"
                android:text="*******"
                android:maxLines="2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primaryText"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_password_avatar"
                app:layout_constraintHorizontal_bias="0.5"/>

        <Button
                android:id="@+id/btn_password_show_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_content"
                app:layout_constraintHorizontal_bias="0.5"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>