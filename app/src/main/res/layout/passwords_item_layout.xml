<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:elevation="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_password_item_root"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_password_name"
                android:text="Text"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"
                android:maxLines="1"
                android:minLines="1"
                android:padding="6dp"
                android:ellipsize="end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/iv_password_avatar"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_password_avatar"
                android:layout_width="@dimen/card_avatar_avatar_size"
                android:layout_height="@dimen/card_avatar_avatar_size"
                android:src="@color/colorPrimary"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="3dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_password_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
                android:id="@+id/tv_password_content"
                android:layout_width="match_parent"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_password_visibility_action"
                android:gravity="center"
                android:text="*******"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primaryText"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_password_avatar"
                app:layout_constraintHorizontal_bias="0.5"/>

        <Button
                style="@style/PSButtonStyle"
                android:id="@+id/btn_password_visibility_action"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:text="Show password"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_content"
                app:layout_constraintHorizontal_bias="0.5"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>