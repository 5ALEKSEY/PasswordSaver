<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/passwordsListFragment">

    <fragment
            android:id="@+id/passwordsListFragment"
            android:name="com.ak.passwordsaver.presentation.screens.passwords.PasswordsListFragment"
            android:label="PasswordsListFragment"
            tools:layout="@layout/fragment_passwords_list">
        <action
                android:id="@+id/action_passwordsListFragment_to_editPasswordActivity4"
                app:destination="@id/editPasswordActivity" />
        <action
                android:id="@+id/action_passwordsListFragment_to_addNewPasswordActivity"
                app:destination="@id/addNewPasswordActivity" />
    </fragment>
    <fragment
            android:id="@+id/settingsFragment"
            android:name="com.ak.passwordsaver.presentation.screens.settings.SettingsFragment"
            android:label="SettingsFragment"
            tools:layout="@layout/fragment_settings">
        <action
                android:id="@+id/action_settingsFragment_to_designSettingsFragment"
                app:destination="@id/designSettingsFragment"
                app:enterAnim="@anim/push_down_in"
                app:exitAnim="@anim/push_down_out"
                app:popExitAnim="@anim/push_down_out"
                app:popEnterAnim="@anim/push_down_in"/>
        <action
                android:id="@+id/action_settingsFragment_to_privacySettingsFragment"
                app:destination="@id/privacySettingsFragment" />
        <action
                android:id="@+id/action_settingsFragment_to_aboutSettingsFragment"
                app:destination="@id/aboutSettingsFragment" />
    </fragment>

    <activity
            android:id="@+id/editPasswordActivity"
            android:name="com.ak.passwordsaver.presentation.screens.passwordmanage.edit.EditPasswordActivity"
            android:label="EditPasswordActivity"
            tools:layout="@layout/activity_manage_password" />
    <activity
            android:id="@+id/addNewPasswordActivity"
            android:name="com.ak.passwordsaver.presentation.screens.passwordmanage.add.AddNewPasswordActivity"
            android:label="AddNewPasswordActivity"
            tools:layout="@layout/activity_manage_password" />

    <!--Settings-->
    <fragment
            android:id="@+id/designSettingsFragment"
            android:name="com.ak.passwordsaver.presentation.screens.settings.design.DesignSettingsFragment"
            android:label="DesignSettingsFragment"
            tools:layout="@layout/fragment_design_settings" />
    <fragment
            android:id="@+id/privacySettingsFragment"
            android:name="com.ak.passwordsaver.presentation.screens.settings.privacy.PrivacySettingsFragment"
            android:label="PrivacySettingsFragment"
            tools:layout="@layout/fragment_privacy_settings" />
    <fragment
            android:id="@+id/aboutSettingsFragment"
            android:name="com.ak.passwordsaver.presentation.screens.settings.about.AboutSettingsFragment"
            android:label="AboutSettingsFragment"
            tools:layout="@layout/fragment_about_settings" />

</navigation>