<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="popup_animation_medium">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="popup_animation_quick">
        <item name="android:windowEnterAnimation">@anim/popup_enter_quick</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_quick</item>
    </style>

    <style name="AccentBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_rectangle_accent</item>
        <item name="android:backgroundTint">?themedPrimaryLightColor</item>
    </style>

    <style name="WhiteBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_rectangle_white</item>
    </style>

    <style name="PhotoChooserBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AccentBottomSheet</item>
    </style>

    <style name="PasswordActionsBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/WhiteBottomSheet</item>
    </style>

    <style name="PSButtonStyle">
        <item name="android:background">@drawable/bg_rounded_radius_rectangle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?staticColorWhite</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

</resources>